<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/round_6"
    android:backgroundTint="?dialogColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory limit for uploaded files"
        style="@style/DialogTitle"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/available_memory_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Available: 10 GB"
        android:textColor="?android:textColorPrimary"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <TextView
        android:id="@+id/memory_limit_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Limit: 10 GB"
        android:textColor="?android:textColorPrimary"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/memory_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_gravity="end">
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_button_size"
            android:text="Cancel"
            android:background="@drawable/round_primary_ripple_6"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="normal"
            android:textColor="?android:textColorPrimary"/>
        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_button_size"
            android:text="Update"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_primary_ripple_6"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="normal"
            android:textColor="?colorPrimary"/>
    </LinearLayout>

</LinearLayout>